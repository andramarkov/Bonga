.col-md-12
  .content-box-header
    .panel-title 請假申請表
  .content-box-large.box-with-header
    = simple_form_for @leave_event do |f|
      = f.input :start_date, require: :true
      = f.input :end_date, require: :true
      = f.input :hours, require: :true
      = f.input :description, require: :true
      = f.input :leave_type, require: :true, collection: LeaveEvent::BASIC_TYPES, include_blank: false
      = f.button :submit
